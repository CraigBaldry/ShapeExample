<AnchorPane id="AnchorPane"
            onMouseMoved="#displayPostion"
            prefHeight="271.0"
            prefWidth="424.0"
            xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pkg2dshapes.ShapeController">
    <children>
      <Button fx:id="btnCLear"
              layoutX="14.0"
              layoutY="232.0"
              mnemonicParsing="false"
              text=" Clear Canvas"
              textAlignment="CENTER" />
      <Text fx:id="status"
            layoutX="190.0"
            layoutY="249.0"
            strokeType="OUTSIDE"
            strokeWidth="0.0"
            text="X: 0. Y:0." />
      <Canvas fx:id="myCanvas"
              height="229.0"
              width="424.0" />
      <Text fx:id="count"
            layoutX="403.0"
            layoutY="249.0"
            strokeType="OUTSIDE"
            strokeWidth="0.0"
            text="0" />
      <Label layoutX="320.0"
             layoutY="236.0"
             text="Total Shapes: " />
    </children>
</AnchorPane>
